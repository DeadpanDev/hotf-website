generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model MaintenanceMode {
  id          String    @id
  isActive    Boolean   @default(false)
  activatedBy String?
  activatedAt DateTime?
  updatedAt   DateTime
  createdAt   DateTime  @default(now())
}

model TicketPageActivation {
  id               String    @id
  isActive         Boolean   @default(false)
  activatedBy      String?
  activatedAt      DateTime?
  countdownMinutes Int?
  countdownEndsAt  DateTime?
  ticketUrl        String?
  updatedAt        DateTime
  createdAt        DateTime  @default(now())
}

model account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime
  user                  user      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model user {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  role          String?   @default("user")
  account       account[]
  session       session[]
}

model verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@index([identifier])
}
